{
    "name": "@harrydehix/everyjs",
    "version": "0.0.4",
    "description": "simple library to repeatedly execute code (every week, day, hour, minute, ...) ",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "npx tsc",
        "watch": "npx tsc --watch",
        "test": "npx tsc && node dist/test.js"
    },
    "keywords": [
        "scheduler",
        "everyjs",
        "cron-job"
    ],
    "author": "harrydehix",
    "license": "ISC",
    "dependencies": {
        "long-timeout": "^0.1.1",
        "luxon": "^3.5.0",
        "typescript": "^5.6.2"
    },
    "devDependencies": {
        "@types/long-timeout": "^0.1.2",
        "@types/luxon": "^3.4.2"
    }
}
